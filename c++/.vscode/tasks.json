{
    "version": "2.0.0",
    "command": "clang++",
    "args": ["-g","${file}","-o","${file}.out"],    // 编译命令参数
    "problemMatcher": {
        "owner": "c++",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    }
}